<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:layout_centerHorizontal="true">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code: "
                android:textStyle="bold"
                android:textSize="@dimen/_20ssp"
                android:id="@+id/code_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock_qr_code"
                android:text="Code"
                android:layout_toRightOf="@id/code_text"
                android:textAlignment="center"
                android:textSize="@dimen/_20ssp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item name: "
                android:textStyle="bold"
                android:layout_below="@id/code_text"
                android:textSize="@dimen/_20ssp"
                android:id="@+id/item_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock_item"
                android:text="item"
                android:textAlignment="center"
                android:layout_below="@id/code_text"
                android:layout_toRightOf="@id/item_text"
                android:textSize="@dimen/_20ssp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: "
                android:textStyle="bold"
                android:layout_below="@id/item_text"
                android:textSize="@dimen/_20ssp"
                android:id="@+id/quantity_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock_quantity"
                android:text="Quantity"
                android:textAlignment="center"
                android:layout_below="@id/stock_item"
                android:layout_toRightOf="@id/quantity_text"
                android:textSize="@dimen/_20ssp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="@dimen/_5sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Price: "
                android:textStyle="bold"
                android:layout_below="@id/quantity_text"
                android:textSize="@dimen/_20ssp"
                android:id="@+id/up_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock_unit_price"
                android:layout_toRightOf="@id/up_text"
                android:text="Unit price"

                android:textAlignment="center"
                android:layout_below="@id/stock_quantity"
                android:textSize="@dimen/_20ssp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginLeft="@dimen/_5sdp"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>




</RelativeLayout>